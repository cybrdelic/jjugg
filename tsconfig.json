{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@jjugg/sql-assist": [
        "packages/sql-assist/src"
      ],
      "@jjugg/sql-assist/*": [
        "packages/sql-assist/src/*"
      ],
      "@jjugg/dev-sql-ui": [
        "packages/dev-sql-ui/src"
      ],
      "@jjugg/dev-sql-ui/*": [
        "packages/dev-sql-ui/src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "database/scripts/**/*",
    "database/migrations/**/*",
    "scripts/**/*"
  ]
}
